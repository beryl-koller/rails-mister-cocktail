<h2><%= @cocktail.name %></h2>

<% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete dose",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-red" %>

